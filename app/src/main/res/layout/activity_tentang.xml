<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/deskripsi_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:text="Aplikasi ini dibuat untuk menyelesaikan pendidikan Strata 1 di Universitas Panca Marga Probolinggo"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/deskripsi_2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/deskripsi_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:text="Dengan menggunakan aplikasi ini, pengguna dapat dengan mudah mengarahkan kamera ponsel ke tanaman yang ingin diperiksa. lalu aplikasi akan memberikan informasi tentang jenis gulma yang terdeteksi dan rekomendasi herbisida"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/deskripsi_1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/deskripsi_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:text="Aplikasi Identifikasi Gulma adalah sebuah solusi inovatif yang dirancang untuk membantu para petani dan ahli pertanian dalam mengenali dan mengelola gulma dengan lebih efisien."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/prodi"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/fakultas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Fakultas Teknik"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@id/nama"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/prodi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Prodi Teknik Elektro"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@id/fakultas"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:navigationIcon="@drawable/panahsvg"
        app:title="Tentang Aplikasi"
        app:titleTextColor="@android:color/white"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/upm"
        android:layout_width="126dp"
        android:layout_height="123dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/logo_upm"
        android:layout_below="@id/toolbar"
        tools:ignore="MissingConstraints"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tentang_pembuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Tentang Pembuat Aplikasi"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_below="@id/upm"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Ryan Prayuga Ardiansyah"
        android:textColor="#000000"
        android:layout_below="@id/tentang_pembuat"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/instagram_logo"
        android:layout_below="@id/deskripsi_3"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>